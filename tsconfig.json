{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true, // 解析 json 模块
    "esModuleInterop": true, // 允许通过 es6 语法引入 commonjs 模块
    "jsx": "preserve", // jsx 不转义
    "lib": ["ES2021", "DOM", "DOM.Iterable"], // 支持的类库 esnext及dom
    "baseUrl": ".", // 当前目录，即项目根目录作为基础目录
    "rootDir": ".",
    "removeComments": false,
    "composite": true,
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@/*": ["src/*"] // 将 @ 映射到 src 目录
    }
    // "typeRoots": ["declarations.ts"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
